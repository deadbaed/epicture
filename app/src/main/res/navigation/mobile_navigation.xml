<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:gravity = "center"
        android:id="@+id/navigation_account"
        android:name="com.philippeloctaux.epicture.ui.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.philippeloctaux.epicture.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_upload"
        android:name="com.philippeloctaux.epicture.ui.UploadFragment"
        android:label="@string/title_upload"
        tools:layout="@layout/fragment_upload" />

    <fragment
        android:id="@+id/navigation_liked"
        android:name="com.philippeloctaux.epicture.ui.LikedFragment"
        android:label="@string/title_liked"
        tools:layout="@layout/fragment_liked" />

</navigation>